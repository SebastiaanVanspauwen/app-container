{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "declaration": true,
    "target": "esnext",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/.*/"
  ]
}
